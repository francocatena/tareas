<%= form_for(@responsable) do |f| %>
  <% if @responsable.errors.any? %>
    <div id="error_explanation">
      <h2>El responsable no se pudo guardar</h2>

      <ul>
      <% @responsable.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :correo %><br />
    <%= f.email_field :correo %>
  </div>
  <div class="field">
    <%= f.label :clave %><br />
    <%= f.password_field :clave %>
  </div>
  <div class="actions">
    <%= f.submit 'Guardar' %>
  </div>
<% end %>
